                cor1: (0.4,0.4,0.4,1)
                cor2: (0.47,0.47,0.47,1)
                text: 'SAIR'
                size_hint_y: None
                height: 150
                on_release: root.confirmacao()
            Label:

<Botaor@ButtonBehavior+Label>:
    canvas.before:
        Color:
            rgba: self.cor1
        Ellipse:
            pos: self.pos
            size: self.height, self.height
        Ellipse:
            pos: self.x + self.width - self.height, self.y
            size: self.height, self.height
        Rectangle:
            pos: self.x + self.height / 2.0, self.y
            size: self.width - self.height, self.height

<Nomes>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 0.4,0.4,0.4,1
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'wl.png'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'INÍCIO'
                    app_icon: app.icon if app.icon else ''
                    on_release: root.back()
                ActionButton:
                    text: 'GRUPOS'
                    on_release:
                        root.tipo = 'grupos'
                        app.root.get_screen('grupo').ids.text2.text = '2'
                        app.root.get_screen('grupo').ids.quantidade.text = '2'
                        app.root.get_screen('resultado').grupos()
                ActionSeparator:
                ActionButton:
                    text: 'INDIVIDUAL'
                    on_release:
                        root.tipo = 'individual'
                        app.root.get_screen('resultado').preparar()
        Label:
            canvas.before:
                Color:
                    rgba: 0.1, 0.1, 0.1, 0.6
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_y: None
            height: 200
            text: 'Digite e confirme os participantes!'
        BoxLayout:
            canvas.before:
                Color:
                    rgba: 0.1, 0.1, 0.1, 0.6
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_y: None
            height: 200
            padding: 50
            spacing: 20
            TextInput:
                id: text1
                font_size: 70
            Button:
                text: 'ADICIONAR'
                size_hint_x: None
                width: 280
                on_release: app.root.get_screen('menu_nomes').confirmar_nome()
        Label:
            canvas.before:
                Color:
                    rgba: 0.1, 0.1, 0.1, 0.6
                Rectangle:
                    size: self.size
                    pos: self.pos
            id: participantes
            size_hint_y: None
            height: 100
        ScrollView:
            BoxLayout:
                id: box_participantes
                spacing: 27
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
        BoxLayout:
            canvas.before:
                Color:
                    rgba: 0.1, 0.1, 0.1, 0.6
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_y: None
            height: 200
            padding: 50
            spacing: 20
            Button:
                text: 'Carregar Lista'
                on_release: root.carregar()
            Button:
                text: 'Salvar Lista'
                on_release:
                    root.verificar()

<Participante>:
    size_hint_y: None
    height: 136
    padding: 32
    Label:
        id: labelp
    Botaor:
        cor1: (0.4,0.1,0.1,1)
        cor2: (0.47,0.1,0.1,1)
        text: 'Excluir'
        size_hint_x: None
        size_hint_y: None
        height: 96
        width: 190
        on_release:
            app.root.get_screen('menu_nomes').lista_nomes_temp.remove(root.ids.labelp.text)
            app.root.get_screen('menu_nomes').ids.box_participantes.remove_widget(root)
            q = len(app.root.get_screen('menu_nomes').lista_nomes_temp)
            aviso = str(q) + ' PARTICIPANTES:'
            app.root.get_screen('menu_nomes').ids.participantes.text = aviso

<Titulo>:
    size_hint_y: None
    height: 200
    padding: 32
    spacing: 30
    Botaor:
        id: labelt
        on_release:
            app.root.get_screen('menu_nomes').titulo = root.ids.labelt.text
            app.root.get_screen('menu_nomes').recolocar()
    Botaor:
        cor1: (0.4,0.1,0.1,1)
        cor2: (0.47,0.1,0.1,1)
