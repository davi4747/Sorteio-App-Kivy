                    app.root.get_screen('menu_nomes').ids.participantes.text = '0 PARTICIPANTES:'
                    app.root.current = 'menu_nomes'
            Botaor:
                cor1: (0.4,0.4,0.4,1)
                cor2: (0.47,0.47,0.47,1)
                text: 'NÚMEROS'
